<div>
  <h1 class="admin-h1"><%=  @creature.name %></h1>
</div>

<div class='margin-top-10' >
  <div>Challenge rating - <%= @creature.challenge_rating %> </div>
  <div>Experience - <%= @creature.experience %> </div>
  <% if @creature.class_name.present? %>
    <div>Class - <%= @creature.class_name %> </div>
  <% end %>
  <div>Alignment- <%= @creature.alignment %> </div>
  <% if @creature.size.present? %>
    <div>Size - <%= @creature.size %> </div>
  <% end %>
  <% if @creature.reach.present? %>
    <div>Reach - <%= @creature.reach %> </div>
  <% end %>
  <div>Init - <%= @creature.init %> </div>
  <div>Perception - <%= @creature.perception %> </div>
  <% if @creature.race.present? %>
    <div>Race - <%= @creature.race %> </div>
  <% end %>
  <div>Type - <%= @creature.type_name %> </div>
  <% if @creature.subtypes.present? %>
    <div>Subtypes - <%= @creature.subtypes.join(", ") %></div>
  <% end %>
  <br>
  <%= link_to 'Back', admin_creatures_path, :class => 'btn btn-primary' %>
</div>

